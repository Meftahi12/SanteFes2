<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.navigation.drawer.activity.Activity.ClientOrAdminActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/addAsAdministateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter autant qu'administrateur"/>
        <Button
            android:id="@+id/addAsClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter autant que client"/>
    </LinearLayout>
</LinearLayout>
